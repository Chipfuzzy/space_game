import pgzrun

HEIGHT = 500
WIDTH = 850

satllites = []
lines = []
next_satellites = 0

start_time = 0
total_time = 0
end_time = 0

number_of_satellite = 8

def create_satellites():
    global start_time
    for count in range(0, number_of_satellite):
        satellite = Actor('satellite_nobg')
        satellite.pos = randint(40, WIDTH-40), randint(40. HEIGHT-40)
        satellites.append(satellite)
    start_time = time()
    
pgzrun.go()
